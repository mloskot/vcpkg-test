# EditorConfig is awesome: http://EditorConfig.org
#
# top-most EditorConfig file
root = true

[*]
guidelines = 80, 90
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 90
trim_trailing_whitespace = true

[CMakeLists.txt]
guidelines = 80
indent_size = 2
max_line_length = 80

[*.yml]
indent_size = 2
